<h1>New part</h1>

<% form_for(@part) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description, :rows => 4 %>
  </p>
  <p>
    <%= f.label :category_id %><br />
    <%= select("part", "category_id", Category.find(:all).collect {|c| [ c.name, c.id ] }, { :include_blank => false }) %>
  </p>
  
  <br>
  <p><u>Attributes</u></p>
  <% fields_for :property do |fp| %>  
	  <p>
	    <%= fp.label :name %><br />
	    <%= fp.text_field :name %>
	  </p>
	  <p>
	    <%= fp.label :type %><br />
	    <%= fp.text_field :type %>
	  </p>
	  <p>
	    <%= fp.label :measurement_unit %><br />
	    <%= fp.text_field :measurement_unit %>
	  </p>
  <% end %>
  
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', parts_path %>
